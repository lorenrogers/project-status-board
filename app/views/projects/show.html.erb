<section>
<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Status:</strong>
  <% if @project.status %>
    <span style="background-color:<%=@project.status.color%>">
      <%= @project.status.name %>
    </span>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<%= link_to 'Edit', edit_project_path(@project), class: 'button' %> |
<%= link_to 'Back', root_path, class: 'button' %>
</section>
