<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :status do %>
    <span>(<%= link_to 'status list', statuses_path %>)</span>
    <%= f.collection_select :status_id, Status.order(:name), :id, :name %>
  <% end %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
